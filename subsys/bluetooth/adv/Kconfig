menuconfig NRF_BT_ADV
	bool "nRF Bluetooth advertising"
	depends on BT_PERIPHERAL
	help
	  Enable nRF Bluetooth advertisng subsystem. The subsystem manages
	  advertising packets and scan response packets. It does not control
	  advertising start and stop.

if NRF_BT_ADV

module = NRF_BT_ADV
module-str = nRF Bluetooth advertising module
source "${ZEPHYR_BASE}/subsys/logging/Kconfig.template.log_config"

rsource "providers/Kconfig"

endif # NRF_BT_ADV
