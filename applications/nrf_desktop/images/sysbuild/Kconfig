config DESKTOP_GPIO_EXPANDER
	bool "Use separate core to control GPIOs"
	help
	  Delegate GPIO control (e. g. controlling LEDs and handling hardware
	  buttons) to a separate core.

config DESKTOP_GPIO_EXPANDER_BOARD
	string "GPIO expander board name"
	depends on DESKTOP_GPIO_EXPANDER
	default "nrf54h20dk/nrf54h20/cpuppr" if BOARD_NRF54H20DK_NRF54H20_CPUAPP
	help
	  Board name used for GPIO expander image.
